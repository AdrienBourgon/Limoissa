<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>MembersFilter</filter-name>
        <filter-class>fr.limoissa.Filter.MembersFilter</filter-class>
    </filter>
    <filter>
        <filter-name>setCharacterEncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>setCharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>MembersFilter</filter-name>
        <url-pattern>/Library</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>S_Signin</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_Signin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>S_Signup</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_Signup</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>S_Logoff</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_Logoff</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>C_Library</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_Library</servlet-class>
        <multipart-config>
            <location>D:/Documents/NetBeansProjects/Java/JSP/Limoissa/Limoissa-web/UploadedFiles</location>
            <max-file-size>10485760</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet>
        <servlet-name>C_LibraryCategories</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_LibraryCategories</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>C_LibraryCountry</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_LibraryCountries</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>C_LibraryAuthors</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_LibraryAuthors</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>C_LibraryBooks</servlet-name>
        <servlet-class>fr.limoissa.Controller.C_LibraryBooks</servlet-class>
        <multipart-config>
            <location>D:/Documents/NetBeansProjects/Java/JSP/Limoissa/Limoissa-web/UploadedFiles</location>
            <max-file-size>10485760</max-file-size>
            <max-request-size>52428800</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>S_Signin</servlet-name>
        <url-pattern>/Signin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>S_Signup</servlet-name>
        <url-pattern>/Signup</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>S_Logoff</servlet-name>
        <url-pattern>/Logoff</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>C_Library</servlet-name>
        <url-pattern>/Library</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>C_LibraryCategories</servlet-name>
        <url-pattern>/Categories</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>C_LibraryCountry</servlet-name>
        <url-pattern>/Countries</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>C_LibraryAuthors</servlet-name>
        <url-pattern>/Authors</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>C_LibraryBooks</servlet-name>
        <url-pattern>/Books</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
